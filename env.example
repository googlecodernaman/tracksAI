# Railway Traffic Decision-Support System Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://railway_user:railway_password@localhost:5432/railway_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Kafka Configuration (for real-time messaging)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_TRAIN_UPDATES=train_updates
KAFKA_TOPIC_DECISIONS=decisions

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optimization Configuration
OPTIMIZATION_TIME_LIMIT_SECONDS=30
OPTIMIZATION_MAX_ITERATIONS=1000
OPTIMIZATION_CONFIDENCE_THRESHOLD=0.7

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json

# Indian Railways MCP API Configuration
MCP_API_BASE_URL=https://api.railway.gov.in
MCP_API_KEY=your-mcp-api-key-here
MCP_API_TIMEOUT=30

# Development Configuration
DEBUG=true
ENVIRONMENT=development
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Production Configuration (override in production)
# DEBUG=false
# ENVIRONMENT=production
# CORS_ORIGINS=["https://your-domain.com"]
